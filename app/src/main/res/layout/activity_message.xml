<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ddd"
    android:id="@+id/detail_mes">
    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="#00CC33"
        android:gravity="center_horizontal|center_vertical"  >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mes_detail"
            android:textSize="20sp"
            android:textColor="#fff" />
    </LinearLayout>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="10dp" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical">
        <ImageView
            android:id="@+id/detail_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/icon"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:id="@+id/detail_name">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textColor="#000"
                android:textSize="18sp" android:id="@+id/detail_name1"
                android:text="@string/mes_username"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/detail_name2"
                android:textSize="18sp"
                android:textColor="#000" android:layout_centerVertical="true"
                android:layout_toRightOf="@id/detail_name1"
                android:layout_marginLeft="50dp"
                android:text="abcdefg"/>
        </RelativeLayout>
        <View  android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="#9D9D9D"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:id="@+id/detail_phone">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textColor="#000"
                android:layout_centerVertical="true"
                android:textSize="18sp" android:id="@+id/detail_phone1"
                android:text="@string/mes_phone"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/detail_phone2"
                android:textSize="18sp"
                android:textColor="#000" android:layout_centerVertical="true"
                android:layout_toRightOf="@id/detail_phone1"
                android:layout_marginLeft="50dp"
                android:text="12345678"/>
        </RelativeLayout>
        <View  android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="#9d9d9d"/>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:id="@+id/detail_setname"
            android:onClick="mes_setname">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textColor="#000"
                android:layout_centerVertical="true"
                android:textSize="18sp" android:id="@+id/detail_setname1"
                android:text="@string/mes_setname"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/detail_setname2"
                android:textSize="18sp"
                android:textColor="#000" android:layout_centerVertical="true"
                android:layout_toRightOf="@id/detail_setname1"
                android:layout_marginLeft="32dp"
                android:text="张三"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="matrix"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:src="@drawable/mm_submenu"
                android:id="@+id/detial_setname3" />
        </RelativeLayout>
        <View  android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="#9D9D9D"/>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:id="@+id/detail_file">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textColor="#000"
                android:layout_centerVertical="true"
                android:textSize="18sp" android:id="@+id/detail_file1"
                android:text="@string/mes_file"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/detail_file2"
                android:textSize="18sp"
                android:textColor="#000" android:layout_centerVertical="true"
                android:layout_toRightOf="@id/detail_file1"
                android:layout_marginLeft="68dp"
                android:text="女"/>
        </RelativeLayout>
        <View  android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="#9d9d9d"/>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:id="@+id/detail_loacl">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textColor="#000"
                android:layout_centerVertical="true"
                android:textSize="18sp" android:id="@+id/detail_loacl1"
                android:text="@string/mes_local"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/detail_loacl2"
                android:textSize="18sp"
                android:textColor="#000" android:layout_centerVertical="true"
                android:layout_toRightOf="@id/detail_loacl1"
                android:layout_marginLeft="50dp"
                android:text="广州"/>
        </RelativeLayout>
        <View  android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="#9d9d9d"/>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:id="@+id/detail_age">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textColor="#000"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                android:id="@+id/detail_age1"
                android:text="@string/mes_age"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/detail_age2"
                android:textSize="18sp"
                android:textColor="#000" android:layout_centerVertical="true"
                android:layout_toRightOf="@id/detail_age1"
                android:layout_marginLeft="62dp"
                android:text="12345678"/>
        </RelativeLayout>
        <View  android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="#9d9d9d"/>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:id="@+id/detail_birth">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textColor="#000"
                android:layout_centerVertical="true"
                android:textSize="18sp" android:id="@+id/detail_birth1"
                android:text="@string/mes_birth"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/detail_birth2"
                android:textSize="18sp"
                android:textColor="#000" android:layout_centerVertical="true"
                android:layout_marginLeft="68dp"
                android:text="2000-11-28"/>
        </RelativeLayout>
        <View  android:layout_height="1px"
            android:layout_width="match_parent"
            android:background="#9d9d9d"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:layout_marginTop="50dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="@string/mes_addcontact"
            android:textColor="#fff"
            android:background="@drawable/btn_style_green"
            android:id="@+id/addexcontact"/>
        <Button android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:textColor="#fff"
            android:text="@string/mes_deletefriend"
            android:background="@drawable/btn_style_green"
            android:id="@+id/delete_contact"
            android:layout_marginLeft="50dp"/>
    </LinearLayout>
</LinearLayout>