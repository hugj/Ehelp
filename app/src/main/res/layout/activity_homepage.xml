<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ddd"
    android:id="@+id/single_mes">
    <include layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical">
        <ImageView
            android:id="@+id/single_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/icon" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:background="@drawable/preference_first_item"
            android:id="@+id/single_name">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textColor="#000"
                android:layout_centerVertical="true"
                android:textSize="20sp" android:id="@+id/single_name1"
                android:text="@string/mes_username"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/single_name2"
                android:textColor="#000" android:layout_centerVertical="true"
                android:layout_toRightOf="@id/single_name1"
                android:layout_marginLeft="30dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="matrix"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:id="@+id/single_name3"
                android:src="@drawable/mm_submenu" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:background="@drawable/preference_item"
            android:id="@+id/nickname">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:id="@+id/nickname1"
                android:text="@string/mes_nickname"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nickname2"
                android:textColor="#000"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/nickname1"
                android:layout_marginLeft="50dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="matrix"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:id="@+id/nickname3"
                android:src="@drawable/mm_submenu" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:background="@drawable/preference_item"
            android:id="@+id/single_job">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:id="@+id/single_job1"
                android:text="@string/mes_job"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/single_job2"
                android:textColor="#000"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/single_job1"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="matrix"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:id="@+id/single_job3"
                android:src="@drawable/mm_submenu" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:background="@drawable/preference_item"
            android:id="@+id/single_phone">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textColor="#000"
                android:layout_centerVertical="true"
                android:textSize="20sp" android:id="@+id/single_phone1"
                android:text="@string/mes_phone"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/single_phone2"
                android:textColor="#000" android:layout_centerVertical="true"
                android:layout_toRightOf="@id/single_phone1"
                android:layout_marginLeft="30dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:background="@drawable/preference_item"
            android:id="@+id/single_file">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textColor="#000"
                android:layout_centerVertical="true"
                android:textSize="20sp" android:id="@+id/single_file1"
                android:text="@string/mes_file"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/single_file2"
                android:textColor="#000"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/single_file1"
                android:layout_marginLeft="50dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="matrix"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:id="@+id/single_file3"
                android:src="@drawable/mm_submenu" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:background="@drawable/preference_item"
            android:id="@+id/single_loacl">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textColor="#000"
                android:layout_centerVertical="true"
                android:textSize="20sp" android:id="@+id/single_loacl1"
                android:text="@string/mes_local"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/single_loacl2"
                android:textColor="#000" android:layout_centerVertical="true"
                android:layout_toRightOf="@id/single_loacl1"
                android:layout_marginLeft="30dp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="matrix"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:id="@+id/single_loacl3"
                android:src="@drawable/mm_submenu" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:background="@drawable/preference_last_item"
            android:id="@+id/single_age">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textColor="#000"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:id="@+id/single_age1"
                android:text="@string/mes_age"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/single_age2"
                android:textColor="#000"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/single_age1"
                android:layout_marginLeft="50dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="matrix"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:id="@+id/single_age3"
                android:src="@drawable/mm_submenu" />
        </RelativeLayout>
    </LinearLayout>

        </LinearLayout>

        <com.wangjie.rapidfloatingactionbutton.RapidFloatingActionLayout
            xmlns:rfal="http://schemas.android.com/apk/res-auto"
            android:id="@+id/label_list_sample_rfal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            rfal:rfal_frame_color="#ffffff"
            rfal:rfal_frame_alpha="0.7"
            >

            <com.wangjie.rapidfloatingactionbutton.RapidFloatingActionButton
                xmlns:rfab="http://schemas.android.com/apk/res-auto"
                android:id="@+id/label_list_sample_rfab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                rfab:rfab_size="normal"
                rfab:rfab_drawable="@drawable/rfab__drawable_rfab_default"
                rfab:rfab_color_normal="#37474f"
                rfab:rfab_color_pressed="#263238"
                rfab:rfab_shadow_radius="7dp"
                rfab:rfab_shadow_color="#999999"
                rfab:rfab_shadow_dx="0dp"
                rfab:rfab_shadow_dy="5dp"
                />


        </com.wangjie.rapidfloatingactionbutton.RapidFloatingActionLayout>
    </RelativeLayout>
</LinearLayout>