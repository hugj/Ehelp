<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <include layout="@layout/toolbar" />

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scrollbars="vertical">
            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.baidu.mapapi.map.MapView
                    android:id="@+id/map"
                    android:layout_width="fill_parent"
                    android:layout_height="300sp"
                    android:clickable="true"
                    android:layout_marginBottom="250dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true" />

                <Button
                    android:id="@+id/drive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="SearchButtonProcess"
                    android:text="驾车"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true" />

                <Button
                    android:id="@+id/walk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="SearchButtonProcess"
                    android:text="步行"
                    android:layout_above="@+id/drive"
                    android:layout_alignEnd="@+id/drive" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="40sp"
            android:id="@+id/Title"
            android:text="事件标题"
            android:textSize="20dp"
            android:layout_alignParentLeft ="@+id/imageView"
            android:layout_below="@+id/imageView" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="50sp"
            android:id="@+id/Content"
            android:text="事件内容"
            android:layout_alignParentLeft ="@+id/imageView"
            android:layout_below="@+id/Title" />


        <ImageView
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:id="@+id/imageView"
            android:layout_marginTop="330sp"
            android:layout_marginLeft="10sp"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:layout_width="120sp"
            android:layout_height="30sp"
            android:text="你大爷"
            android:id="@+id/user_name"
            android:layout_toRightOf ="@+id/imageView"
            android:layout_alignTop="@+id/imageView"
            android:layout_marginRight="240sp"
            android:layout_marginTop="20sp"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="100sp"
            android:layout_height="20sp"
            android:text="这里是天堂"
            android:id="@+id/helptime"
            android:layout_alignTop="@+id/imageView"
            android:layout_alignParentEnd="true" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/Content"
                    android:id="@+id/comment"></LinearLayout>
            </RelativeLayout>

        </ScrollView>

        <com.wangjie.rapidfloatingactionbutton.RapidFloatingActionLayout
            xmlns:rfal="http://schemas.android.com/apk/res-auto"
            android:id="@+id/label_list_sample_rfal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            rfal:rfal_frame_color="#ffffff"
            rfal:rfal_frame_alpha="0.7"
            >

            <com.wangjie.rapidfloatingactionbutton.RapidFloatingActionButton
                xmlns:rfab="http://schemas.android.com/apk/res-auto"
                android:id="@+id/label_list_sample_rfab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                rfab:rfab_size="normal"
                rfab:rfab_drawable="@drawable/rfab__drawable_rfab_default"
                rfab:rfab_color_normal="#37474f"
                rfab:rfab_color_pressed="#263238"
                rfab:rfab_shadow_radius="7dp"
                rfab:rfab_shadow_color="#999999"
                rfab:rfab_shadow_dx="0dp"
                rfab:rfab_shadow_dy="5dp"
                />


        </com.wangjie.rapidfloatingactionbutton.RapidFloatingActionLayout>
    </RelativeLayout>
</LinearLayout>